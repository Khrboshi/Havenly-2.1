# .env.example
# Copy these into Vercel → Project → Settings → Environment Variables

# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_PUBLIC_KEY

# Site URL (required for magic-link + redirects)
# Use your production domain from Vercel (no trailing slash)
NEXT_PUBLIC_SITE_URL=https://YOUR-PROD-DOMAIN.vercel.app

# AI (required if you use insights/reflection generation)
GROQ_API_KEY=YOUR_GROQ_API_KEY
# Optional (safe default)
GROQ_MODEL=llama-3.1-70b-versatile

# Credits admin endpoint protection (required if you use /api/user/credits/add)
CREDITS_ADMIN_KEY=YOUR_LONG_RANDOM_SECRET
